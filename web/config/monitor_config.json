{
  "rules": [
    {
      "key": "at_desk",
      "regexp": "^true$"
    },
    {
      "key": "is_study",
      "regexp": "^true$"
    },
    {
      "key": "activity",
      "regexp": "^(看书|写字)$"
    },
    {
      "key": "posture",
      "regexp": "^(端正)$"
    },
    {
      "key": "lighting",
      "regexp": "^(充足|一般)$"
    }
  ],
  "min_notify_interval": 10,
  "max_notify_interval": 30,
  "consecutive_fail_limit": 12,
  "auto_start_time": "09:00",
  "auto_stop_time": "18:00",
  "enable_time_scheduler": true,
  "capture_interval": 300,
  "preview_duration": 30,
  "enable_preview": true,
  "log_dir": "logs"
}